<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:layout_margin="12dp"
    android:background="@color/design_default_color_primary_variant"
    xmlns:tool="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/text"
        android:layout_width="334dp"
        android:layout_height="40dp"
        android:padding="10dp"
android:background="@color/design_default_color_primary_variant"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        tool:layout_constraintBottom_toBottomOf="parent"
        tool:layout_constraintEnd_toEndOf="parent"
        tool:layout_constraintHorizontal_bias="0.094"
        tool:layout_constraintRight_toLeftOf="@+id/image"
        tool:layout_constraintStart_toStartOf="parent"
        tool:layout_constraintTop_toTopOf="parent"
        tools:text="LAKSHAY" />

    <ImageButton
        android:id="@+id/image"
        android:layout_width="38dp"
        android:layout_height="39dp"
        android:layout_marginRight="4dp"
        android:background="@color/design_default_color_primary_variant"
        android:src="@drawable/delete_1"
        tool:layout_constraintBottom_toBottomOf="@+id/text"
        tool:layout_constraintRight_toRightOf="parent"
        tool:layout_constraintTop_toTopOf="@+id/text"
        tool:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>